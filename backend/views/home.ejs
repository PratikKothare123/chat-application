<!DOCTYPE html>
<html>
<head>
  <title>Home</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <header class="top">
    <h2>Hello, <%= me %></h2>
  </header>

  <div class="container">
    <h3>All Users</h3>

    <% users.forEach(user => { %>
      <% if (user.username !== me) { %>
        <div class="user">
          <span><%= user.username %></span>
          <a href="/chat?from=<%= me %>&to=<%= user.username %>">
            <button>Start Chat</button>
          </a>
        </div>
      <% } %>
    <% }) %>
  </div>

</body>
</html>
